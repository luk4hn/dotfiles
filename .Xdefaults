URxvt*termName:             xterm-256color

!URXVT FONTS
URxvt*font:                 xft:SourceCodePro-Regular:pixelsize=20
URxvt*boldFont:             xft:SourceCodePro-Regular:pixelsize=20
!URxvt*font:                 xft:Ubuntu Mono derivative Powerline:pixelsize=22
!URxvt*boldFont:             xft:Ubuntu Mono derivative Powerline:pixelsize=22
URxvt*letterSpace:          0
URxvt*allow_bold:           false

!URxvt.perl-ext-common:      default,matcher,tabbedex,vtwheel,clipboard
URxvt.perl-ext-common:      default,clipboard,url-select,keyboard-select
URxvt.url-select.launcher:  firefox
URxvt.url-select.underline: true
URxvt.keysym.M-u:           perl:url-select:select_next
URxvt.keysym.M-Escape:      perl:keyboard-select:activate
URxvt.keysym.M-s:           perl:keyboard-select:search

!disable the bell
URxvt.insecure: 			false

!URXVT SCROLLBAR AND CURSOR STYLE
URxvt*saveLines: 			300000
URxvt*scrollBar: 			false
URxvt*scrollTtyOutput:      false
URxvt*scrollWithBuffer:     true
URxvt*scrollTtyKeypress:    true
URxvt*scrollstyle:			plain
URxvt*cursorBlink: 			false
URxvt*cursorUnderline: 		false
URxvt*cursorColor:          #00ff00

!URXVT FULLSCREEN TOGGLE
URxvt.keysym.F11: 			perl:fullscreen:switch

! URXVT COLORS
URxvt.depth:                32
!*background: 				[95]#0a0a0a
*background: 				[95]#1a1a1a
*foreground: 				#dedede

